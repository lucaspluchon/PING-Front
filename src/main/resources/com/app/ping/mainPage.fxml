            <Button fx:id="menuButton" mnemonicParsing="false" onAction="#showMenu" prefHeight="26.0" prefWidth="204.0" text="Menu" BorderPane.alignment="CENTER">
               <contextMenu>
                  <ContextMenu fx:id="contextMenu">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openFolder" text="Open project" />
                        <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open file" />
                      <MenuItem mnemonicParsing="false" onAction="#executeCode" text="Run this file" />
                        <MenuItem mnemonicParsing="false" text="Settings" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <font>
                  <Font name="Comic Sans MS" size="13.0" />
               </font>
            </Button>
         </top>
         <rotationAxis>
            <Point3D y="1.0" />
         </rotationAxis>
         <center>
            <TreeView fx:id="projectTree" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </right>
   <center>
      <StyleClassedTextArea fx:id="textEditor" lineHighlighterOn="true" onKeyReleased="#updateTextIde" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
