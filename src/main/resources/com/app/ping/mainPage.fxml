<BorderPane fx:id="window" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.ping.Controller">
   <top>
      <TextArea fx:id="consoleResult" editable="false" prefHeight="76.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font></TextArea>
   </top>
   <right>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
